<UserControl x:Class="Telerik.DesignTemplates.WP.Controls.LoadingScreenControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:telerikPrimitives="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls.Primitives"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <ImageBrush ImageSource="/../SplashScreenImage.screen-WXGA.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <telerikPrimitives:RadBusyIndicator Content="{x:Null}" Foreground="{StaticResource GreenBrush}" Margin="0,50,0,0" AnimationStyle="AnimationStyle9" IsRunning="True"/>
    </Grid>
</UserControl>
